<?xml version="1.0" encoding="UTF-8"?>
<!--
  Skill Specification Template for SkillForge 4.0

  This template captures all analysis insights in a structured format
  that enables clean Phase 3 execution via meta-prompting.

  Usage: Fill in all sections during Phase 2 (Specification Generation)
-->
<skill_specification version="1.0">

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- METADATA                                                                  -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <metadata>
    <name><!-- kebab-case-skill-name --></name>
    <version>1.0.0</version>
    <created><!-- YYYY-MM-DD --></created>
    <analysis_iterations><!-- Number of questioning rounds completed --></analysis_iterations>
    <timelessness_score><!-- 1-10, must be ≥7 --></timelessness_score>

    <analysis_summary>
      <lenses_applied>
        <!-- List all thinking models that were applied -->
        <lens>first_principles</lens>
        <lens>inversion</lens>
        <lens>second_order_effects</lens>
        <lens>pre_mortem</lens>
        <lens>systems_thinking</lens>
        <!-- Add others as applied -->
      </lenses_applied>
      <questioning_rounds><!-- Total rounds completed --></questioning_rounds>
      <expert_perspectives>
        <!-- List simulated expert perspectives -->
        <expert><!-- e.g., domain_expert --></expert>
        <expert><!-- e.g., ux_expert --></expert>
        <expert><!-- e.g., maintenance_engineer --></expert>
      </expert_perspectives>
    </analysis_summary>
  </metadata>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- CONTEXT                                                                   -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <context>
    <problem_statement>
      <what><!-- What specific problem does this skill solve? --></what>
      <why><!-- Why does this problem need solving? (Root cause from 5 Whys) --></why>
      <who><!-- Who experiences this problem? What's their context? --></who>
    </problem_statement>

    <existing_landscape>
      <related_skills>
        <!-- List skills that overlap or relate -->
        <skill name="<!-- related-skill-name -->">
          <relationship><!-- How does it relate? Similar but focuses on X instead of Y --></relationship>
          <overlap_score><!-- 0-10 --></overlap_score>
        </skill>
      </related_skills>
      <distinctiveness><!-- Why this skill is distinct and necessary --></distinctiveness>
    </existing_landscape>

    <user_profile>
      <primary_audience><!-- Who will use this skill most? --></primary_audience>
      <expertise_level><!-- beginner|intermediate|advanced|expert --></expertise_level>
      <context_assumptions><!-- What context/knowledge users are expected to have --></context_assumptions>
    </user_profile>
  </context>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- REQUIREMENTS                                                              -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <requirements>
    <explicit>
      <!-- What the user literally asked for -->
      <requirement id="E1" priority="must">
        <description><!-- Requirement description --></description>
        <source>User request</source>
      </requirement>
    </explicit>

    <implicit>
      <!-- What users expect but didn't say -->
      <requirement id="I1" priority="must">
        <description><!-- Expected behavior not stated --></description>
        <source><!-- Industry standard / Common expectation --></source>
      </requirement>
    </implicit>

    <discovered>
      <!-- Requirements found through analysis -->
      <requirement id="D1" priority="should">
        <description><!-- Requirement discovered during analysis --></description>
        <source><!-- e.g., Lens: inversion - Failure mode prevention --></source>
        <discovery_round><!-- Which questioning round --></discovery_round>
      </requirement>
    </discovered>
  </requirements>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- ARCHITECTURE                                                              -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <architecture>
    <pattern>
      <name><!-- single-phase|multi-phase|generator|checklist|orchestrator --></name>
      <rationale><!-- WHY this pattern was selected over alternatives --></rationale>
      <alternatives_considered>
        <alternative name="<!-- other-pattern -->">
          <why_rejected><!-- Reason this wasn't chosen --></why_rejected>
        </alternative>
      </alternatives_considered>
    </pattern>

    <phases>
      <phase id="1">
        <name><!-- Phase Name --></name>
        <purpose><!-- WHY this phase exists --></purpose>
        <inputs>
          <input><!-- What this phase receives --></input>
        </inputs>
        <process>
          <step order="1"><!-- Step description --></step>
          <step order="2"><!-- Step description --></step>
        </process>
        <outputs>
          <output><!-- What this phase produces --></output>
        </outputs>
        <verification>
          <check><!-- How to confirm this phase completed correctly --></check>
        </verification>
        <failure_handling><!-- What to do if this phase fails --></failure_handling>
      </phase>
      <!-- Add more phases as needed -->
    </phases>

    <decision_points>
      <decision_point phase="1" step="2">
        <condition><!-- When this decision is reached --></condition>
        <options>
          <option><!-- Path A leads to... --></option>
          <option><!-- Path B leads to... --></option>
        </options>
        <default><!-- Default if unclear --></default>
      </decision_point>
    </decision_points>
  </architecture>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- SCRIPTS                                                                    -->
  <!-- Automation, verification, and agentic capabilities                        -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <scripts>
    <decision_summary>
      <needs_scripts><!-- true|false --></needs_scripts>
      <rationale><!-- WHY scripts are or aren't needed for this skill --></rationale>
    </decision_summary>

    <script_inventory>
      <!-- List all scripts to be created. Remove this section if needs_scripts is false -->
      <script id="S1">
        <name><!-- script_name.py --></name>
        <category><!-- validation|state_management|generation|transformation|integration|visualization|calculation --></category>
        <purpose><!-- What this script does and WHY it's needed --></purpose>
        <language>python</language>

        <invocation>
          <command><!-- python scripts/script_name.py <args> --></command>
          <arguments>
            <argument name="input" required="true"><!-- Input file or directory --></argument>
            <argument name="--output" required="false"><!-- Output destination --></argument>
            <argument name="--verbose" required="false"><!-- Enable verbose output --></argument>
          </arguments>
        </invocation>

        <outputs>
          <output type="exit_code">
            <code value="0">Success</code>
            <code value="1">General failure</code>
            <code value="10">Validation failure</code>
          </output>
          <output type="stdout"><!-- What it prints on success --></output>
          <output type="file"><!-- Files it creates, if any --></output>
        </outputs>

        <patterns_used>
          <!-- Reference patterns from script-patterns-catalog.md -->
          <pattern>Result</pattern>
          <pattern><!-- argparse_subcommands|simple_argparse|json_state|validation_result --></pattern>
        </patterns_used>

        <verification>
          <self_verifies><!-- true|false --></self_verifies>
          <verification_method><!-- How the script verifies its own output --></verification_method>
        </verification>

        <rationale><!-- WHY this script was included, what problem it solves --></rationale>
      </script>
      <!-- Add more scripts as needed -->
    </script_inventory>

    <reused_scripts>
      <!-- Scripts adapted from other skills (prefer reuse over reinvention) -->
      <reused_script>
        <source><!-- ~/.claude/skills/other-skill/scripts/name.py --></source>
        <adaptation><!-- How it was adapted for this skill --></adaptation>
        <rationale><!-- WHY this script was reused --></rationale>
      </reused_script>
    </reused_scripts>

    <agentic_capabilities>
      <!-- Overall assessment of skill's autonomous operation capabilities -->
      <autonomous_execution>
        <supported><!-- true|false --></supported>
        <description><!-- Can the skill run without user intervention? How? --></description>
      </autonomous_execution>

      <self_verification>
        <supported><!-- true|false --></supported>
        <description><!-- Can scripts verify their own success? How? --></description>
      </self_verification>

      <error_recovery>
        <supported><!-- true|false --></supported>
        <description><!-- Can scripts recover from errors autonomously? How? --></description>
      </error_recovery>

      <state_persistence>
        <supported><!-- true|false --></supported>
        <description><!-- Does it maintain state across sessions? Where? --></description>
      </state_persistence>
    </agentic_capabilities>
  </scripts>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- EVOLUTION ANALYSIS                                                        -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <evolution_analysis>
    <timelessness_score><!-- 1-10, must be ≥7 --></timelessness_score>
    <score_justification>
      <!-- Why this skill scores X on timelessness -->
    </score_justification>

    <temporal_projection>
      <horizon period="6_months">
        <expected_state><!-- How the skill will be used --></expected_state>
        <risks><!-- What might change --></risks>
        <mitigations><!-- How we've prepared --></mitigations>
      </horizon>
      <horizon period="1_year">
        <expected_state></expected_state>
        <risks></risks>
        <mitigations></mitigations>
      </horizon>
      <horizon period="2_years">
        <expected_state></expected_state>
        <risks></risks>
        <mitigations></mitigations>
      </horizon>
    </temporal_projection>

    <extension_points>
      <!-- At least 2 required -->
      <extension_point>
        <location><!-- Where the skill can be extended --></location>
        <purpose><!-- What kind of extension this enables --></purpose>
        <mechanism><!-- How to add the extension --></mechanism>
      </extension_point>
    </extension_points>

    <dependencies>
      <dependency type="external">
        <name><!-- External dependency name --></name>
        <stability><!-- stable|evolving|volatile --></stability>
        <fallback><!-- What to do if this changes --></fallback>
      </dependency>
      <dependency type="internal">
        <name><!-- Internal skill/system --></name>
        <coupling><!-- loose|moderate|tight --></coupling>
      </dependency>
    </dependencies>

    <obsolescence_triggers>
      <trigger likelihood="low">
        <description><!-- What change would make this obsolete --></description>
        <defensive_measure><!-- How we've designed against this --></defensive_measure>
      </trigger>
    </obsolescence_triggers>
  </evolution_analysis>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- ANTI-PATTERNS                                                             -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <anti_patterns>
    <anti_pattern severity="critical">
      <description><!-- What to avoid --></description>
      <reason><!-- WHY it's problematic (from inversion lens) --></reason>
      <example><!-- Concrete example of the anti-pattern --></example>
      <alternative><!-- What to do instead --></alternative>
    </anti_pattern>
    <!-- Add more anti-patterns as discovered -->
  </anti_patterns>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- SUCCESS CRITERIA                                                          -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <success_criteria>
    <criterion id="SC1" type="functional" priority="must">
      <description><!-- Measurable functional requirement --></description>
      <verification_method><!-- How to verify this is met --></verification_method>
    </criterion>

    <criterion id="SC2" type="quality" priority="must">
      <description><!-- Quality attribute requirement --></description>
      <verification_method><!-- How to verify this is met --></verification_method>
    </criterion>

    <criterion id="SC3" type="evolution" priority="should">
      <description><!-- Future-proofing requirement --></description>
      <verification_method><!-- How to verify this is met --></verification_method>
    </criterion>
  </success_criteria>

  <!-- ═══════════════════════════════════════════════════════════════════════ -->
  <!-- GENERATION INSTRUCTIONS                                                   -->
  <!-- ═══════════════════════════════════════════════════════════════════════ -->

  <generation_instructions>
    <skill_md_structure>
      <section order="1">Frontmatter (YAML)</section>
      <section order="2">Title and brief intro</section>
      <section order="3">Triggers (3-5 phrases)</section>
      <section order="4">Quick Reference table</section>
      <section order="5">Process (phases/steps)</section>
      <section order="6">Anti-Patterns</section>
      <section order="7">Verification</section>
      <section order="8">Evolution/Extension Points</section>
      <section order="9">References (if applicable)</section>
    </skill_md_structure>

    <reference_docs>
      <!-- List any reference docs to generate -->
      <doc><!-- reference-doc-1.md - Purpose --></doc>
    </reference_docs>

    <assets_needed>
      <!-- List any assets to create -->
      <asset type="template"><!-- template-name.md - Purpose --></asset>
    </assets_needed>

    <estimated_size>
      <skill_md><!-- X-Y lines --></skill_md>
      <total_with_references><!-- X-Y lines --></total_with_references>
    </estimated_size>
  </generation_instructions>

</skill_specification>
